<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/recipeTitle" android:text="Recipe Title" android:textStyle="bold"/>
        <TextView android:id="@+id/recipeCategory" android:text="Category"/>
        <TextView android:id="@+id/recipeOwner" android:text="Owner"/>
        <TextView android:id="@+id/recipeDate" android:text="Submitted"/>
        <TextView android:id="@+id/rejectionReason" android:text="Reason" android:textColor="@android:color/holo_red_dark" android:visibility="gone"/>
    </LinearLayout>

