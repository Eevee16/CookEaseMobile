<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Success Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/purple_primary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="âœ…"
                android:textSize="52sp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Submitted!"
            android:textSize="28sp"
            android:textColor="@color/gray_900"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your recipe has been submitted for review. It will be visible once approved."
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="48dp"/>

        <!-- Back to Home Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            style="@style/Widget.CookEase.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:backgroundTint="@color/purple_primary"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"/>

    </LinearLayout>
</ScrollView>